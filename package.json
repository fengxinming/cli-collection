{
  "name": "fs-concat",
  "version": "2.0.1",
  "description": "Concatenate multiple files.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "fs-concat": "./bin/index.mjs"
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "prepare": "husky",
    "eslint": "eslint --ext .js,.mjs,.jsx,.ts,.tsx --fix --ignore-path .eslintignore ./",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fs",
    "concat",
    "concat-files"
  ],
  "author": "Jesse Feng <fxm0016@126.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengxinming/fs-concat.git"
  },
  "bugs": {
    "url": "https://github.com/fengxinming/fs-concat/issues"
  },
  "homepage": "https://github.com/fengxinming/fs-concat#readme",
  "dependencies": {
    "cac": "^6.7.14",
    "globby": "^13.2.2",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.48.0",
    "eslint-config-fe": "^2.1.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "vite": "^5.1.6",
    "vite-plugin-external": "^4.3.0",
    "vitest": "^1.4.0"
  },
  "files": [
    "dist"
  ]
}